  "error_test_tasks": [
    {
      "description": "空请求体测试",
      "payload": {},
      "expected_status_code": 422,
      "expected_error": "validation error"
    },
    {
      "description": "缺少必需字段测试",
      "payload": {
        "prompt": "测试任务"
      },
      "expected_status_code": 422,
      "expected_error": "field required"
    },
    {
      "description": "无效数据类型测试",
      "payload": {
        "prompt": "测试任务",
        "model": "deepseek-chat",
        "priority": "high"
