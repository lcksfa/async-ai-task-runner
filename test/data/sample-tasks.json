  "performance_baselines": {
    "response_time_targets": {
      "health_check": 50,
      "task_creation": 200,
      "task_query": 300
    },
    "load_test_targets": {
      "light_load": {
        "concurrent_requests": 10,
        "success_rate": 0.95,
        "max_response_time": 1000
      },
      "medium_load": {
        "concurrent_requests": 50,
        "success_rate": 0.90,
        "max_response_time": 2000
      }
    },
    "resource_limits": {
      "max_memory_usage": 80,
      "max_cpu_usage": 70,
      "max_disk_io": 85
    }
  },
  "test_scenarios": {
    "happy_paths": [
      {
        "name": "创建并完成单个任务",
        "steps": [
          "创建任务",
          "验证返回任务ID",
          "轮询任务状态直到完成",
          "验证任务结果"
        ]
      },
      {
        "name": "批量任务创建",
        "steps": [
          "并发创建多个任务",
          "验证所有任务都有唯一ID",
          "监控任务执行状态",
          "验证最终任务完成率"
        ]
      },
      {
        "name": "按优先级过滤任务",
        "steps": [
          "创建不同优先级的任务",
          "查询高优先级任务",
          "查询低优先级任务",
          "验证过滤结果正确"
        ]
      }
    ],
    "edge_cases": [
      {
        "name": "查询不存在的任务",
        "steps": [
          "查询ID为999999的任务",
          "验证返回404错误",
          "验证错误信息格式"
        ]
      },
      {
        "name": "使用无效的任务ID格式",
        "steps": [
          "查询ID为'abc'的任务",
          "验证返回适当的错误响应"
        ]
      },
      {
        "name": "并发创建相同内容任务",
        "steps": [
          "同时创建多个相同内容的任务",
          "验证每个任务都有唯一的ID",
          "验证任务内容正确保存"
        ]
      }
    ]
  }
